@using Usuarios.Data.ViewModels
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex flex-column align-items-center">
    <h1 class="display-4">Cadastro do Usuário</h1>
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Desculpe!</b> - @TempData["Error"] </span>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="col-md-12 alert alert-success">
            <span>@TempData["SuccessMessage"] </span>
        </div>
    }
    <form asp-action="Register" method="post" class="w-50">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Cpf" class="form-label">Cpf</label>
            <input asp-for="Cpf" type="text" class="form-control">
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Login" class="form-label">Login</label>
            <input asp-for="Login" type="text" class="form-control" id="registerUsername">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Senha" class="form-label">Senha</label>
            <input asp-for="Senha" type="password" class="form-control">
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmarSenha" class="form-label">Confirmar Senha</label>
            <input asp-for="ConfirmarSenha" type="password" class="form-control">
            <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
    </form>
</div>